<style>
  :root {
    --nav-height: 60px; /* Adjust this value to match your navigation bar height */
  }

  .video-hero {
    position: relative;
    min-height: 110vh;
    width: 100%;
    overflow: hidden;
  }
  .video-hero__iframe {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    min-width: 100vw;
    min-height: 130vh;
    width: auto;
    height: auto;
    aspect-ratio: 16 / 9;
  }
  .video-hero__overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.4);
    z-index: 1;
  }
  .video-hero__content {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: calc(4rem + var(--nav-height)) 1rem 4rem; /* Added nav-height to top padding */
    color: #fff;
    z-index: 1;
    gap: 1rem;
    min-height: 100%;
  }
  .sos-text, .beauty-text {
    font-size: 18rem;
    font-weight: 900;
    background: linear-gradient(45deg, #ff6b6b, #ff8e8e, #ff6b6b);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    text-shadow: 0 0 20px rgba(255, 107, 107, 0.8), 0 0 40px rgba(255, 107, 107, 0.6), 0 0 60px rgba(255, 107, 107, 0.4);
    animation: glowPulse 2s ease-in-out infinite;
    margin: 0;
  }
  .sub-text, .sub-text2 {
    font-size: 2rem;
    font-weight: 400;
    color: #fff;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    margin: 0;
  }
  @media (max-width: 768px) {
    .video-hero {
      min-height: 130vh;
    }
    .video-hero__iframe {
      min-height: 160vh;
    }
    .sos-text, .beauty-text {
      font-size: 8rem;
    }
    .sub-text, .sub-text2 {
      font-size: 1.5rem;
    }
  }
  .button-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    width: 100%;
    max-width: 600px;
    margin: 2rem 0;
  }
  @media (min-width: 768px) {
    .button-grid {
      grid-template-columns: repeat(5, 1fr);
      max-width: 1000px;
    }
  }
  .grid-button {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: white;
    padding: 0.75rem;
    border-radius: 0.5rem;
    font-weight: 600;
    transition: all 0.3s ease;
    gap: 0.5rem;
    text-align: center;
    text-decoration: none;
    cursor: pointer;
  }
  @media (min-width: 768px) {
    .grid-button {
      padding: 1.25rem;
      font-size: 1.4rem;
    }
    .grid-button img {
      max-height: 120px;
    }
  }
  .grid-button span {
    display: block;
  }
  .grid-button img {
    width: 100%;
    max-height: 80px;
    object-fit: contain;
    border-radius: 0.25rem;
  }
  .grid-button:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
  }
  @keyframes glowPulse {
    0% {
      text-shadow: 0 0 20px rgba(255, 107, 107, 0.8), 0 0 40px rgba(255, 107, 107, 0.6), 0 0 60px rgba(255, 107, 107, 0.4);
      background-position: 0% 50%;
    }
    50% {
      text-shadow: 0 0 30px rgba(255, 107, 107, 1), 0 0 50px rgba(255, 107, 107, 0.8), 0 0 70px rgba(255, 107, 107, 0.6);
      background-position: 100% 50%;
    }
    100% {
      text-shadow: 0 0 20px rgba(255, 107, 107, 0.8), 0 0 40px rgba(255, 107, 107, 0.6), 0 0 60px rgba(255, 107, 107, 0.4);
      background-position: 0% 50%;
    }
  }
</style>

